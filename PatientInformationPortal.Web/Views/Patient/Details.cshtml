@model PatientInformationPortal.Web.Models.VmEntities.PatientVm

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <h1>@ViewData["Title"]</h1>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Id)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Id)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Disease.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Disease.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Epilepsy)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Epilepsy)
                </dd>
            </dl>
        </div>
        <div class="col-md-6">
            <div class="row">
                @if (Model.AllergiesDetailsNames != null && Model.NCDDetailsNames != null)
                {
                    <div class="col-sm-6">
                        <h4>Allergies Details</h4>
                        <ul class="list-group">
                            @foreach (var allergyName in Model.AllergiesDetailsNames)
                            {
                                <li class="list-group-item">@allergyName</li>
                            }
                        </ul>
                    </div>
                    <div class="col-sm-6">
                        <h4>NCD Details</h4>
                        <ul class="list-group">
                            @foreach (var ncdName in Model.NCDDetailsNames)
                            {
                                <li class="list-group-item">@ncdName</li>
                            }
                        </ul>
                    </div>
                }
                else
                {
                    <p>No meeting minutes details available.</p>
                }
            </div>
        </div>

    </div>

</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
